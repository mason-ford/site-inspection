<!DOCTYPE html>
<html lang="en">

<head>
  <% include ../partials/head %>
</head>

<body>
  <% include ../partials/menu %>
    <div class="container bg-3">

      <div class="row">
        <div class="col-sm">
          <h1>
            <%= page %>
          </h1>
        </div>
      </div>

      <form class="checkpoint-add-form" action="" method="post">

        <%# Information %>
          <div class="row">
            <div class="col-sm">
              <div class="card">

                <div class="card-header">
                  <div class="row align-items-center">
                    <div class="col-6">
                      Air Filter
                    </div>
                    <div class="col-6">
                      <button type="submit" name="send" value="delete"
                        onclick="return confirm('Are you sure you want to delete this item?');"
                        class="btn btn-danger float-right"><i class="bi bi-x-circle"></i> Delete</button>
                    </div>
                  </div>
                </div>

                <div class="card-body">

                  <div class="form-row">
                    <div class="form-group col-md">
                      <label for="name">Name</label>
                      <input type="text" class="form-control" name="name" id="name" value="<%= checkpoint.name %>"
                        required title="Checkpoint Name">
                    </div>
                  </div>

                  <div class="form-row">
                    <div class="form-group col-md-12">
                      <label for="information">Information</label>
                      <input type="text" class="form-control" name="information" id="information"
                        value="<%= checkpoint.information %>" required title="Checkpoint Information">
                    </div>
                  </div>

                  <div class="form-row">
                    <div class="form-group col-md-4">
                      <label for="passText">Pass Text</label>
                      <input type="text" class="form-control" name="passText" id="passText"
                        value="<%= checkpoint.passText %>" required title="Pass Text">
                    </div>
                    <div class="form-group col-md-4">
                      <label for="failText">Fail Text</label>
                      <input type="text" class="form-control" name="failText" id="failText"
                        value="<%= checkpoint.failText %>" required title="Fail Text">
                    </div>
                    <div class="form-group col-md-4">
                      <label for="actionText">Action Text</label>
                      <input type="text" class="form-control" name="actionText" id="actionText"
                        value="<%= checkpoint.actionText %>" title="Action Text">
                    </div>
                  </div>

                </div>

                <div class="card-footer">
                  <div class="form-row">
                    <div class="col-sm">
                      <button type="submit" name="send" value="update" class="btn btn-success float-right"><i
                          class="bi bi-check-circle"></i> Update</button>
                      <a href="../" class="btn btn-secondary float-left">Cancel</a>
                    </div>
                  </div>
                </div>

              </div>
            </div>
          </div>

      </form>

    </div>
</body>
<% include ../partials/script %>

</html>