<!DOCTYPE html>
<html lang="en">
<head>
  <% include ../partials/head %> 
</head>
<body>
<% include ../partials/menu %>
<div class="container bg-3">    

  <div class="row">
    <div class="col-sm">
      <h1><%= page %></h1>
    </div>
  </div>

  <form class="checkpoint-add-form" action="" method="post">

  <%# Information %>
  <div class="row">
    <div class="col-sm">
      <div class="card">

        <div class="card-body">

          <div class="form-row">
            <div class="form-group col-md">
              <label for="checkpoint-name">Name</label>
              <input type="text" class="form-control" name="checkpoint_name" id="checkpoint-name" required title="Checkpoint name">
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="checkpoint-type">Good Text</label>
              <input type="text" class="form-control" name="checkpoint_good" id="checkpoint-good" required title="Good Text">
            </div>
            <div class="form-group col-md-6">
              <label for="checkpoint-type">Needs Attention Text</label>
              <input type="text" class="form-control" name="checkpoint_attention" id="checkpoint-attention" required title="Needs Attention Text">
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-12">
              <label for="checkpoint-description">Description</label>
              <input type="text" class="form-control" name="checkpoint_description" id="checkpoint-description" required title="Checkpoint description">
            </div>
          </div>

        </div>
      
      </div>
    </div>
  </div>

  <%# Add/Cancel %>
  <div class="row my-3">
    <div class="col-sm">
      <button type="submit" class="btn btn-success float-left">Add</button>
      <a href="/checkpoints/" class="btn btn-danger float-right">Cancel</a>    
    </div>
  </div>

  </form>

</div>
<% include ../partials/script %>
</body>
</html>
