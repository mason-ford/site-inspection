<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
</head>

<body>
    <% include ../partials/menu %>
        <div class="container bg-3">

            <div class="row">
                <div class="col-sm">
                    <h1>
                        <%= page %>
                    </h1>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm">
                    <form class="inspection-add-form" action="/inspections/addInspection" id="formInspection"
                        method="post" enctype="multipart/form-data">

                        <%# Site %>
                            <div class="card">
                                <div class="card-header">
                                    Inspection
                                </div>

                                <ul class="list-group list-group-flush">

                                    <li class="list-group-item">
                                        <label for="site">Site</label>
                                        <select class="form-select" name="site" id="site">
                                            <% sites.forEach(site=> { %>
                                                <option value="<%= site.id %>">
                                                    <%= site.number %> - <%= site.name %>
                                                </option>
                                                <% }) %>
                                        </select>
                                    </li>

                                    <% for(var i=0; i < checkpoints.length; i++) { %>
                                        <li class="list-group-item">
                                            <div class="row mt-3">
                                                <div class="col-md-2">
                                                    <%= checkpoints[i].name %>
                                                </div>
                                                <div class="col-md-2">
                                                    <%= checkpoints[i].information %>
                                                </div>
                                                <div class="col-md-4">
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="radio" id="checkpoint-<%= i %>-good" name="checkpoints[<%= i %>][value]" value="true">
                                                        <label class="form-check-label" for="checkpoint-<%= i %>-good"><%= checkpoints[i].passText %></label>
                                                    </div>
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="radio" id="checkpoint-<%= i %>-attention" name="checkpoints[<%= i %>][value]" value="false">
                                                        <label class="form-check-label" for="checkpoint-<%= i %>-attention"><%= checkpoints[i].failText %></label>
                                                    </div>
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="radio" id="checkpoint-<%= i %>-unknown" name="checkpoints[<%= i %>][value]" value="null" checked>
                                                        <label class="form-check-label" for="checkpoint-<%= i %>-unknown">N/A</label>
                                                    </div>
                                                    <small class="form-text text-muted"><%= checkpoints[i].information %></small>
                                                </div>
                                                <div class="col-md-4">
                                                    <label for="checkpoint-<%= i %>-note">Note:</label>
                                                    <textarea class="form-control form-control-sm"
                                                        id="checkpoint-<%= i %>-note" name="checkpoints[<%= i %>][note]"
                                                        title="<%= checkpoints[i].name %> Note" rows="2"></textarea>
                                                </div>
                                            </div>
                                        </li>
                                        <% } %>
                                </ul>
                            </div>

                            <button type="submit" class="btn btn-primary float-left">Submit</button>

                    </form>
                </div>
            </div>

        </div>
        <% include ../partials/script %>
</body>

</html>