<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
</head>

<body>
    <% include ../partials/menu %>
        <div class="container bg-3">

            <div class="row">
                <div class="col-sm">
                    <h1>
                        <%= page %>
                    </h1>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm">
                    <form class="inspection-add-form" action="/inspections/addInspection" id="formInspection"
                        method="post" enctype="multipart/form-data">

                        <%# Inspection Information %>
                            <div class="card">
                                <div class="card-header">
                                    Inspection
                                </div>

                                <div class="card-body">
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label for="site">Site</label>
                                            <select class="form-select" name="site" id="site" required>
                                                <% sites.forEach(site=> { %>
                                                    <option value="<%= site.id %>">
                                                        <%= site.number %> - <%= site.name %>
                                                    </option>
                                                    <% }) %>
                                            </select>
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label for="dateTime">Date Time (YYYY-MM-DD)</label>
                                            <input type="text" class="form-control" name="dateTime" id="dateTime"
                                                required title="Inspection Date and Time">
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-12">
                                            <label for="information">Information</label>
                                            <textarea class="form-control" name="information" id="information"
                                                title="Inspection Information" rows="5"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        <%# Checkpoints %>
                            <div class="card mt-3">
                                <div class="card-header">
                                    Checkpoints
                                </div>

                                <ul class="list-group list-group-flush">
                                    <% for(var i=0; i < checkpoints.length; i++) { %>
                                        <li class="list-group-item">
                                            <div class="row mt-3">
                                                <div class="col-md-3">
                                                    <%= checkpoints[i].name %>
                                                    <small class="form-text text-muted">
                                                        <%= checkpoints[i].information %>
                                                    </small>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="radio"
                                                            id="checkpoint-<%= i %>-pass"
                                                            name="checkpoints[<%= i %>][value]" value="true">
                                                        <label class="form-check-label"
                                                            for="checkpoint-<%= i %>-pass">
                                                            <%= checkpoints[i].passText %>
                                                        </label>
                                                    </div>
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="radio"
                                                            id="checkpoint-<%= i %>-fail"
                                                            name="checkpoints[<%= i %>][value]" value="false">
                                                        <label class="form-check-label"
                                                            for="checkpoint-<%= i %>-fail">
                                                            <%= checkpoints[i].failText %>
                                                        </label>
                                                    </div>
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="radio"
                                                            id="checkpoint-<%= i %>-na"
                                                            name="checkpoints[<%= i %>][value]" value="null"
                                                            checked>
                                                        <label class="form-check-label"
                                                            for="checkpoint-<%= i %>-na">N/A</label>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <label for="checkpoint-<%= i %>-note">Note:</label>
                                                    <textarea class="form-control form-control-sm"
                                                        id="checkpoint-<%= i %>-note"
                                                        name="checkpoints[<%= i %>][note]"
                                                        title="<%= checkpoints[i].name %> Note" rows="2"></textarea>
                                                </div>
                                            </div>
                                        </li>
                                        <% } %>
                                </ul>
                            </div>

                        <div class="form-row mt-3">
                            <div class="col-sm">
                                <button type="submit" class="btn btn-success float-left"><i class="bi bi-building-check"></i> Update</button>
                                <a href="../" class="btn btn-secondary float-right">Cancel</a> 
                            </div>
                        </div>

                    </form>
                </div>
            </div>

        </div>
        <% include ../partials/script %>
</body>

</html>