<!DOCTYPE html>
<html lang="en">
<head>
  <% include ../partials/head %> 
</head>
<body>
<% include ../partials/menu %>
<div class="container bg-3">

    <div class="row">
        <div class="col-sm">
            <h1><%= page %></h1>
        </div>
    </div>

    <%# Setup %>
    <div class="row">
        <div class="col-sm">  
            <form class="inspection-addSetup-form" action="/inspections/add" method="post">
                <div class="card">
                    <div class="card-header">
                      Inspection Setup
                    </div>
                    <div class="card-body">
                        <div class="form-row">
                            <div class="form-group col-md">
                                <label for="inspection-siteName">Site Name</label>
                                <select class="form-control form-control-md" name="inspection_siteId" id="inspection-siteId" required title="Site name">
                                    <% if (sites.length > 0) {%>
                                        <% sites.forEach(site => { %>
                                            <option value="<%= site._id %>"><%= site.name %></option>
                                        <% }) %>
                                    <% } %>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-success float-left">Setup Inspection</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>
<% include ../partials/script %>
</body>
</html>
