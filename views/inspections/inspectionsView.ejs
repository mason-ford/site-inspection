<!DOCTYPE html>
<html lang="en">
<head>
  <% include ../partials/head %> 
</head>
<body>
<% include ../partials/menu %>
<div class="container bg-3"> 

  <div class="row align-items-center">
    <div class="col-10">
      <h1><i class="bi bi-clipboard2-check"></i> <%= page %></h1>
    </div>
    <div class="col-2">
      <a class="btn btn-primary float-right" href="/inspections/add/"><i class="bi bi-plus-circle"></i> New Inspection</a>
    </div>
  </div>
  
  <%# Information %>
  <div class="row">
    <div class="col-sm">
      <div class="card">
        <div class="card-header">
          Inspections
        </div>
        <% if (inspections.length > 0) {%>
          <table class="table table-hover table-sm mb-0">
            <thead>
              <tr>
                <th scope="col">Date</th>
                <th scope="col">Site</th>
                <th scope="col" class="text-success">Pass</th>
                <th scope="col" class="text-warning">Fail</th>
                <th scope="col">Information</th>
                <th scope="col">User</th>
              </tr>
            </thead>
            <tbody>
            <% inspections.forEach(inspection => { %>
              <tr>
                <td><a href="/inspections/inspection/<%= inspection._id %>"><%= moment(inspection.dateTime).format('DD MMMM YYYY') %></a></td>
                <td><%= inspection.siteId %></td>
                <td class="text-success">0</td>
                <td class="text-warning">0</td>
                <td><%= inspection.information %></td>
                <td><%= inspection.userName %></td>
              </tr>
            <% }) %>
            </tbody>
          </table>
        <% } else { %>
          <div class="card-body">
            <p>No Inspections</p>
          </div>
        <% } %>
      </div>
    </div>
  </div>

</div>
<% include ../partials/script %>
</body>
</html>
