<!DOCTYPE html>
<html lang="en">

<head>
  <% include ../partials/head %>
</head>

<body>
  <% include ../partials/menu %>
    <div class="container bg-3">

      <div class="row align-items-center">
        <div class="col-9">
          <h1><i class="bi bi-clipboard2-check"></i> Inspections</h1>
        </div>
        <div class="col-3">
          <a class="btn btn-primary float-right" href="/inspections/add/"><i class="bi bi-plus-circle"></i> Add
            Inspection</a>
        </div>
      </div>

      <%# Information %>
        <div class="row">
          <div class="col-sm">
            <% if (inspections.length> 0) {%>
              <table class="table">
                <thead>
                  <tr>
                    <th scope="col">Date</th>
                    <th scope="col">Site</th>
                    <th scope="col">Information</th>
                    <th scope="col">Completed By</th>
                  </tr>
                </thead>
                <tbody>
                  <% inspections.forEach(inspection=> { %>
                    <tr>
                      <td>
                        <a href="/inspections/<%= inspection.id %>">
                          <%= moment(inspection.dateTime).format('DD MMMM YYYY') %>
                        </a>
                      </td>
                      <td>
                        (<%= inspection.siteNumber %>
                          <%= inspection.siteAcronym %>) <%= inspection.siteName %>
                      </td>
                      <td>
                        <%= inspection.information %>
                      </td>
                      <td>
                        <%= inspection.userName %>
                      </td>
                    </tr>
                    <% }) %>
                </tbody>
              </table>
              <% } else { %>
                <p>No Inspections</p>
                <% } %>
          </div>
        </div>
    </div>

    <% include ../partials/script %>
</body>

</html>