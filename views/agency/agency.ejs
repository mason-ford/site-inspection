<!DOCTYPE html>
<html lang="en">
<head>
  <% include ../partials/head %> 
</head>
<body>
<% include ../partials/menu %>
<div class="container bg-3">

  <div class="row">
    <div class="col-sm">
      <h1><%= page %></h1>
    </div>
  </div>

  <%# Agencies %>
  <div class="row">
    <div class="col-sm">
      <% if (agencies.length > 0) {%>
        <div class="card">
          <ul class="list-group list-group-flush">
          <% agencies.forEach(agency => { %>
              <li class="list-group-item">
                <a href="/agency/agency/<%= agency.id %>"><%= agency.name %> - <%= agency.acronym %></a>
                <small class="form-text text-muted"><%= agency.description %></small>
              </li>
          <% }) %>
          </ul>
        </div>
      <% } else { %>
        <p>No Agencies</p>
      <% } %>
    </div>
  </div>

  <%# Add %>
  <div class="row my-3">
    <div class="col-sm">
      <a class="btn btn-info mt-2 mb-3" href="/agency/add/">Add</a>
    </div>
  </div>

</div>
<% include ../partials/script %>
</body>
</html>
