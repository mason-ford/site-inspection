<!DOCTYPE html>
<html lang="en">
<head>
  <% include ../partials/head %> 
</head>
<body>
<% include ../partials/menu %>
<div class="container-fluid bg-3"> 

    <div class="row">
        <div class="col-10">
            <h1><%= page %></h1>
        </div>
    </div>  

    <form class="checkpoint-add-form" action="" method="post">
    
    <input type="hidden" id="task_user" name="task_user" value="<%= user.displayName %>">

    <div class="row">
        <div class="col-sm-4">
            <div class="card">

                <div class="card-header">
                    Task Information
                </div>
    
                <div class="card-body">
    
                    <div class="form-row">
                        <div class="form-group col-md">
                            <label for="task-site">Site</label>
                            <select class="form-control form-control-md" name="task_site" id="task-site" required title="Site name">
                                <option value="all">-All Sites-</option>
                                <% if (sites.length > 0) {%>
                                    <% sites.forEach(site => { %>
                                        <option value="<%= site._id %>"><%= site.name %></option>
                                    <% }) %>
                                <% } %>
                            </select>
                        </div>
                    </div>
        
                    <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="task-text">Task</label>
                        <input type="text" class="form-control" name="task_text" id="task-text" required title="Task text">
                    </div>
                    </div>
    
                </div>
            
            </div>
        </div>
    </div>
  
    <div class="row my-3">
        <div class="col-sm-4">
            <button type="submit" class="btn btn-success float-left">Submit</button>
            <a href="/tasks/" class="btn btn-danger float-right">Cancel</a>    
        </div>
    </div>
  
    </form>

</div>
<% include ../partials/script %>
</body>
</html>
