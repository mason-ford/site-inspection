<!DOCTYPE html>
<html lang="en">
<head>
  <% include ../partials/head %> 
</head>
<body>
<% include ../partials/menu %>
<div class="container bg-3"> 

  <div class="row">
    <div class="col-10">
      <h1><%= page %></h1>
    </div>
    <div class="col-2">
      <a class="btn btn-info mt-2 float-right" href="/tasks/add/">Add</a>
    </div>
  </div>  

  <%# Task %>
  <div class="row mb-3">
    <div class="col-sm">
      <% if (tasks.length > 0) {%>
        <div class="card">

          <div class="card-header">
            <div class="row">
              <div class="col-sm-3">
                Date
              </div>
              <div class="col-sm-3">
                Site
              </div>
              <div class="col-sm-4">
                Task
              </div>
              <div class="col-sm-2">
                User
              </div>
            </div>
          </div>

          <ul class="list-group list-group-flush">
            <% tasks.forEach(task => { %>
              <li class="list-group-item">
                <div class="row">
                  <div class="col-sm-3">
                    <%= moment(task.taskInfo.date).format('MMMM DD, YYYY') %>
                  </div>
                  <div class="col-sm-3">
                    <a href="/sites/site/<%= task.site._id %>"> <%= task.site.name %> (<%= task.site.acronym %>)</a>
                  </div>
                  <div class="col-sm-4">
                    <%= task.taskInfo.text %>
                  </div>
                  <div class="col-sm-2">
                    <%= task.taskInfo.user %>
                  </div>
              </li>
            <% }) %>
          </ul>
        </div>
      <% } else { %>
          <p>No Sites</p>
      <% } %>
    </div>
  </div>
</div>
<% include ../partials/script %>
</body>
</html>
