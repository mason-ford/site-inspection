<!DOCTYPE html>
<html lang="en">

<head>
  <% include ../partials/head %>
</head>

<body>
  <% include ../partials/menu %>
    <div class="container bg-3">

      <div class="row">
        <div class="col-sm">
          <h1><i class="bi bi-plus-circle"></i> Add Task</h1>
        </div>
      </div>

      <div class="row">
        <div class="col-sm">
          <div class="card">

            <div class="card-header">
              Task Details
            </div>

            <div class="card-body">

              <form class="task-add-form" action="/tasks/add" method="post">

                <div class="form-group">
                  <label for="name">Task Name</label>
                  <input type="text" class="form-control" name="name" id="name" required title="Task Name" placeholder="Enter task name">
                </div>

                <div class="form-group">
                  <label for="information">Information</label>
                  <textarea class="form-control" name="information" id="information" rows="3" required title="Task Information" placeholder="Enter task information"></textarea>
                </div>

                <div class="form-group">
                  <label for="siteId">Site</label>
                  <select class="form-select" name="siteId" id="siteId" required title="Select Site">
                    <option value="">Select a Site</option>
                    <% sites.forEach(site => { %>
                      <option value="<%= site.id %>">(<%= site.number %> <%= site.acronym %>) <%= site.name %></option>
                    <% }) %>
                  </select>
                </div>

            </div>

            <div class="card-footer">
              <div class="form-row">
                <div class="col-sm">
                  <button type="submit" name="send" value="add" class="btn btn-success float-right"><i class="bi bi-plus-circle"></i> Add</button>
                  <a href="/tasks" class="btn btn-secondary float-left">Cancel</a>
                </div>
              </div>
            </div>

            </form>

          </div>
        </div>
      </div>

    </div>
    <% include ../partials/script %>
</body>

</html>
