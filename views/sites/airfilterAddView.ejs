<!DOCTYPE html>
<html lang="en">
<head>
  <% include ../partials/head %> 
</head>
<body>
<% include ../partials/menu %>
<div class="container bg-3">

  <div class="row">
    <div class="col-sm">
      <h1><%= page %></h1>
    </div>
  </div>

  <form class="site-edit-form" action="" method="post">

  <%# Air Filter %>
  <div class="row my-3">
    <div class="col-sm">
      <div class="card">

        <div class="card-header">
          Air Filter
        </div>

        <div class="card-body">
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="type-">Type</label>
              <input type="text" class="form-control" name="type" id="type" required title="Air Filter type">
            </div>
            <div class="form-group col-md-6">
              <label for="quantity-">Quantity</label>
              <input type="text" class="form-control" name="quantity" id="quantity" title="Air Filter Quantity">
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-12">
              <label for="size-">Size</label>
              <input type="text" class="form-control" name="size" id="size" title="Air Filter size ex. 10x20x1">
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-12">
              <label for="information">Information</label>
              <textarea class="form-control" name="information" id="information" title="Air Filter Information" rows="5"></textarea>
            </div>
          </div>
        </div>

        <div class="card-footer">
          <button type="submit" name="send" class="btn btn-success float-left">Add</button>
          <a href="." class="btn btn-secondary float-right">Cancel</a>
        </div>

      </div>
    </div>

  </div>
  
  </form>

</div>
<% include ../partials/script %>
</body>
</html>