<!DOCTYPE html>
<html lang="en">
<head>
  <% include ../partials/head %> 
</head>
<body>
<% include ../partials/menu %>
<div class="container bg-3">

  <div class="row">
    <div class="col-sm">
      <h1><i class="bi bi-pencil"></i> Edit Air Filter</h1>
    </div>
  </div>

  <form class="site-edit-form" action="" method="post">

  <%# Air Filter %>
  <div class="row">
    <div class="col-sm">
      <div class="card">

        <div class="card-header">
          <div class="row align-items-center">
            <div class="col-6">
              Air Filter
            </div>
            <div class="col-6">
              <button type="submit" name="send" value="delete" onclick="return confirm('Are you sure you want to delete this item?');" class="btn btn-danger float-right"><i class="bi bi-trash"></i> Delete</button>
            </div>
          </div>
        </div>

        <div class="card-body">
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="type-">Type</label>
              <input type="text" class="form-control" name="type" id="type" value="<%= airFilter.type %>" required title="Air Filter type">
            </div>
            <div class="form-group col-md-6">
              <label for="quantity-">Quantity</label>
              <input type="text" class="form-control" name="quantity" id="quantity" value="<%= airFilter.quantity %>" title="Air Filter Quantity">
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-12">
              <label for="size-">Size</label>
              <input type="text" class="form-control" name="size" id="size" value="<%= airFilter.size %>" title="Air Filter size ex. 10x20x1">
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-12">
              <label for="information">Information</label>
              <textarea class="form-control" name="information" id="information" title="Air Filter Information" rows="5"><%= airFilter.information %></textarea>
            </div>
          </div>
        </div>

        <div class="card-footer">
          <div class="form-row">
            <div class="col-sm">
              <button type="submit" name="send" value="update" class="btn btn-success float-right"><i class="bi bi-check-circle"></i> Update</button>
              <a href="../" class="btn btn-secondary float-left">Cancel</a>
            </div>
          </div>
        </div>

      </div>
    </div>

  </div>
  
  </form>

</div>
<% include ../partials/script %>
</body>
</html>