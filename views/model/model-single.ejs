<!DOCTYPE html>
<html lang="en">
<head>
  <% include ../partials/head %> 
</head>
<body>
<% include ../partials/menu %>
<div class="container bg-3">

  <div class="row">
    <div class="col-sm">
      <h1><%= page %></h1>
    </div>
  </div>

  <% if (model) { %>

  <%# Model %>
  <div class="row">
    <div class="col-sm">
      
        <div class="card">

          <div class="card-header">
            Model Information
          </div>

          <div class="card-body">
            <p class="card-text"><b>Model:</b> <%= model.model %></p>
            <p class="card-text"><b>Name:</b> <%= model.name %></p>
            <p class="card-text"><b>Type:</b> <%= model.type.name %></p>
            <p class="card-text"><b>Description:</b> <%= model.description %></p>
            <p class="card-text"><b>Manufacturer:</b> <%= model.manufacturer %></p>
          </div>

        </div>

    </div>
  </div>

  <%# Edit %>
  <div class="row my-3">
    <div class="col-sm-4">
      <a class="btn btn-warning" href="/model/edit/<%= model.id %>">Edit</a>
    </div>
  </div>

  <% } else { %>
    <div class="row">
      <p>Does not exist</p>
    </div>
  <% } %>

</div>
<% include ../partials/script %>
</body>
</html>
